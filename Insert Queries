INSERT INTO employee
(country, email, level, hire_date, name, region, supervisor, team, title)
VALUES
($country, $email, $level, $hire_date, $name, $region, $supervisor, $team, $title);


INSERT INTO company_work_history
(country, description, level, region, skill_team, skills_used, start_date, end_date, title)
VALUES
($country, $description, $level, $region, $skill_team, $skills_used, $start_date, $end_date, $title)
WHERE
id = $id;


INSERT INTO non_company_work_history
(company, description, skill_team, skills_used, start_date, end_date, title)
VALUES
($company, $description, $skill_team, $skills_used, $start_date, $end_date, $title)
WHERE
id = $id;

INSERT INTO performance
(rating, review_author_Name, start_date, end_date) 
VALUES
($rating, $review_author_Name, $start_date, $end_date)
WHERE
id = $id;

INSERT INTO skills
(skill, skill_level)
VALUES
($skill, $skill_level)
WHERE
id = $id;
